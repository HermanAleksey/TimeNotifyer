<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="120dp"
    android:background="?attr/appWidgetBackgroundColor"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.LinuxApp.AppWidgetContainer">

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_widget_main_label"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="?attr/appWidgetBackgroundColor"
        android:contentDescription="@string/appwidget_text"
        android:text="Time has come!"
        android:textColor="?attr/appWidgetTextColor"
        android:textSize="32sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last update:"/>

        <TextView
            android:id="@+id/tv_last_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_widget"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="5dp"
        android:background="#aaa"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="3dp"
            android:src="@drawable/notification_icon" />

        <ImageButton
            android:id="@+id/button_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/notification_icon" />

        <ImageButton
            android:id="@+id/button_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/empty_space" />

        <ImageButton
            android:id="@+id/button_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="3dp"
            android:background="#f00" />

        <ImageButton
            android:id="@+id/button_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="3dp"
            android:background="#f00" />

    </LinearLayout>


</LinearLayout>